    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_back_ground"
        tools:context="com.example.aabir.metravv2.AppLogin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_overlay"
            android:padding="50dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="vertical"

                >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_camera_alt"
                    android:layout_gravity="center"
                    android:id="@+id/iv_profile_pic"
                    android:layout_margin="25dp"
                    android:padding="20dp"

                    android:background="@drawable/custom_button_border_white"
                    />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/darker_gray"

                    >

                    <android.support.v7.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/useridRegText"
                        android:hint="Username"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_person_outline"
                        android:drawableStart="@drawable/ic_person_outline"
                        android:background="@drawable/custom_edittext_border_below"
                        />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/darker_gray"
                    >
                    <android.support.v7.widget.AppCompatEditText                    android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailRegText"
                        android:hint="Email"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:drawableStart="@drawable/ic_envelope_o"
                        android:drawableLeft="@drawable/ic_envelope_o"
                        android:background="@drawable/custom_edittext_border_below"
                        />


                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/darker_gray"

                    >
                    <android.support.v7.widget.AppCompatEditText                    android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/passRegText"
                        android:hint="Password"
                        android:gravity="center"
                        android:singleLine="true"
                        android:password="true"
                        android:drawableLeft="@drawable/ic_key"
                        android:drawableStart="@drawable/ic_key"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/custom_edittext_border_below"
                        />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/darker_gray"

                    >
                    <android.support.v7.widget.AppCompatEditText                    android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:password="true"
                        android:gravity="center"
                        android:singleLine="true"
                        android:id="@+id/confirmPassRegText"
                        android:hint="Confirm Password"
                        android:drawableLeft="@drawable/ic_key"
                        android:drawableStart="@drawable/ic_key"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/custom_edittext_border_below"
                        />


                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/RegisterBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Register"
                    android:background="@drawable/custom_button_border_white"
                    android:textColor="@android:color/white"
                    />



            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

