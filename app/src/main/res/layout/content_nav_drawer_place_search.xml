<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.aabir.metravv2.NavDrawerPlaceSearchActivity"
    tools:showIn="@layout/app_bar_nav_drawer_place_search">




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|right"
    android:layout_margin="10dp"
    android:orientation="vertical"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/custom_button_back"

        android:id="@+id/testButtonPlace"
        android:text="@string/find_btn"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_back"
        android:orientation="vertical"
        android:id="@+id/listViewLayout"
        android:visibility="gone"

        android:gravity="center_vertical|right"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/place_list_title"
            android:padding="5dp"
            android:textSize="18dp"
            android:gravity="center"
            />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/placeListView"
            android:layout_gravity="right"
            >

        </ListView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/placeTypeLayout"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:visibility="invisible"
        android:padding="5dp"
        android:gravity="center_vertical|right"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <Button
                android:backgroundTint="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="8dp"
                android:id="@+id/placeTypeBtn1"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_directions_bus"
                android:text="Bus Stations"
                />

            <Button
                android:backgroundTint="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/placeTypeBtn2"
                android:textSize="8dp"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_local_atm"
                android:text="ATM Booths"
                />

            <Button
                android:backgroundTint="@android:color/white"
                android:textSize="8dp"
                android:id="@+id/placeTypeBtn3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_local_dining"
                android:text="Restaurant"
                />

            <Button
                android:backgroundTint="@android:color/white"
                android:textSize="8dp"
                android:id="@+id/placeTypeBtn4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_local_hospital"
                android:text="Hospital"
                />

            <Button
                android:backgroundTint="@android:color/white"
                android:layout_width="0dp"
                android:textSize="8dp"
                android:id="@+id/placeTypeBtn5"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_local_airport"
                android:text="Airport"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <Button
                android:backgroundTint="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/placeTypeBtn6"
                android:textSize="8dp"
                android:drawableTop="@drawable/ic_store"
                android:text="Bank"
                />

            <Button
                android:backgroundTint="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/placeTypeBtn7"
                android:textSize="8dp"
                android:drawableTop="@drawable/ic_school"
                android:text="School"
                />

            <Button
                android:backgroundTint="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/placeTypeBtn8"
                android:textSize="8dp"
                android:drawableTop="@drawable/ic_police"
                android:layout_height="match_parent"
                android:text="Police Stations"
                />

            <Button
                android:backgroundTint="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/placeTypeBtn9"
                android:layout_height="match_parent"
                android:textSize="8dp"
                android:drawableTop="@drawable/ic_school"
                android:text="University"
                />
            <Button
                android:backgroundTint="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/placeTypeBtn10"
                android:textSize="8dp"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_train"
                android:text="Train Stations"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</fragment>



