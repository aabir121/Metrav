<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.aabir.metravv2.NavDrawerBusOffline">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/intra_search_layout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="10dp"
            >
            <SearchView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/black"
                android:hint="Search Desired Place"
                android:queryHint="Source"
                android:gravity="right"
                android:background="@drawable/custom_button_border_white"
                android:id="@+id/filterSearchBusOfflineText"
                />
        </LinearLayout>
        <SearchView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:queryHint="Destination"
            android:textColor="@android:color/black"
            android:hint="Search Desired Place"
            android:background="@drawable/custom_button_border_white"
            android:gravity="right"
            android:id="@+id/filterSearchBusOfflineDestText"
            />

    </LinearLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:padding="20dp"

        >

        <ExpandableListView
            android:id="@+id/expandableListViewBus"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />

    </RelativeLayout>
</LinearLayout>
